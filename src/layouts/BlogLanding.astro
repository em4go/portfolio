---
import BaseHead from '../components/BaseHead.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import Navbar from '../components/Navbar.astro';
import Icon from '../components/Icon.astro';
const {active} = Astro.props;
---

<!doctype html>
<html lang='en'>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class='container screen-size'>
			<div class='nav-container'>
				<Navbar>
					<a class='link-icon' href='/portfolio'>
						<Icon name='home' />
						<span class='icon-text'>Landing</span>
					</a>
					<a class='link-icon' href='/portfolio#about'
						><Icon name='person' />
						<span class='icon-text'>About me</span></a
					>
					<a class='link-icon' href='/portfolio#projects'
						><Icon name='bulb' />
						<span class='icon-text'>Projects</span>
					</a>
					<!-- Blog section coming soon -->
					<!-- <a class='link-icon active-icon' href='blog'
						><Icon name='blog' />
						<span class='icon-text'>Blog</span>
					</a> -->
					<a
						class='link-icon'
						target='_blank'
						href='CV_Ernesto_Martinez_Gomez.pdf'
						download
					>
						<Icon name='curriculum' />
						<span class='icon-text'>Download CV</span>
					</a>
					<a
						class='link-icon'
						target='_blank'
						href='https://linkedin.com/in/ernestomg'
					>
						<Icon name='linkedin' />
						<span class='icon-text'>LinkedIn</span>
					</a>
					<a class='link-icon' target='_blank' href='https://github.com/em4go'>
						<Icon name='github' />
						<span class='icon-text'>GitHub</span>
					</a>
				</Navbar>
			</div>
			<slot />
		</div>
	</body>
</html>
