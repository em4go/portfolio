---
import Portfolio from '../layouts/Portfolio.astro';
---

<Portfolio active='landing'>
	<main class='hero-main'>
		<div class='main-section'>
			<div class='landing-img-container'>
				<img
					src='/portfolio/avatar-bg.svg'
					alt='Blob avatar bg'
					class='avatar-bg'
				/>
				<img
					src='/portfolio/dibujo_pixar.png'
					alt='Avatar'
					class='avatar-img'
				/>
			</div>
			<div class='main-text'>
				<h1 class='hero-title'>Ernesto Mart√≠nez</h1>
				<p class='hero-subtitle'>Data Scientist</p>
			</div>
		</div>
	</main>
	<div class='bg-images'>
		<img
			src='/portfolio/corner-landing.png'
			alt='Blue corner image'
			class='landing-bg-img'
		/>
	</div>
</Portfolio>
