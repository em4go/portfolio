---
import Portfolio from '../layouts/Portfolio.astro';
import ProjectSection from '../components/ProjectSection.astro';
---

<Portfolio active=''>
	<div class='content-container'>
		<header class='header' id='landing'>
			<div class='landing-img-container'>
				<img
					src='avatar-bg2.svg'
					alt='Blob avatar bg'
					class='landing__img-bg'
				/>
				<img src='personal-photo.png' alt='Avatar' class='personal-img' />
			</div>
			<div class='main-text'>
				<h1 class='hero-title'>Ernesto Martínez</h1>
				<p class='hero-subtitle'>Data Scientist</p>
				<a class='button-1' href='#about'>See more</a>
			</div>
		</header>
		<img
			src='corner-landing.png'
			alt='Blue corner image'
			class='landing-bg-img'
		/>

		<!-- About -->
		<section class='about-section' id='about'>
			<h1 class='section-title'>About me</h1>
			<div class='about-content'>
				<ul class='text-container'>
					<li>
						📊 Data Science <span class='text-green'>student</span> at Universitat
						Politècnica de València, currently at 2nd year
					</li>
					<li>
						🌐 Web Development <span class='text-yellow'>enthusiast</span>,
						lover of discovering new technologies
					</li>
					<li>
						📖 Self-taught <span class='text-blue'>programmer</span> since 2020
					</li>
					<li>
						🏃🏽‍♂️ Track and field <span class='text-purple'>athlete</span> at Club Atletismo
						Albacete
					</li>
				</ul>
				<div class='about__img-container'>
					<img src='avatar-bg.svg' alt='Blob avatar bg' class='avatar-bg' />
					<img src='dibujo_pixar.png' alt='Avatar' class='avatar-img' />
				</div>
			</div>
		</section>
		<ProjectSection />
	</div>
</Portfolio>

