---
import {projects} from '../consts';
import ProjectCard from './ProjectCard.astro';
---

<article class='about-section' id='projects'>
	<h1 class='page-title'>Projects</h1>
	<div class='projects-container'>
		{
			projects.map((proy) => (
				<ProjectCard
					title={proy.name}
					img={proy.img}
					link={proy.link}
					color={proy.color}
					stack={proy.stack}
				/>
			))
		}
	</div>
</article>
